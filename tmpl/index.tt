<div id="fb-root"></div>
<div
  class="modal"
  data-setup="showable"
  data-showable='{"id":"signin","show":{"effect":"fade"},"hide":{"effect":"fade"}}'
>
  <div class="modal-header">
    <h3>Sign In</h3>
    <a
      class="close"
      data-setup="hide"
      data-hide='{"id":"signin"}'
    >×</a>
  </div>
  <div class="modal-body">
    <div
      style="text-align: center;"
      data-setup="tab.content"
      data-tab='{"id":"social","group":"signin"}'
    >
      <form method="post" action="/signin/twitter/signin">
        <div><button class="btn large primary"style="width: 190px;">Connect with Twitter</button></div>
      </form>
      <form method="post" action="/signin/facebook/signin">
        <div><button class="btn large primary">Connect with Facebook</button></div>
      </form>
    </div>
  </div>
</div>
